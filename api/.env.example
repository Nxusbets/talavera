# Backend Configuration (.env)
# Copy this to api/.env and adjust values as needed

NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://talavera_user:talavera_password@db:5432/talavera_saas
DB_HOST=db
DB_PORT=5432
DB_USER=talavera_user
DB_PASSWORD=talavera_password
DB_NAME=talavera_saas

# JWT Configuration
JWT_SECRET=dev-secret-key-change-in-production-to-random-string
JWT_EXPIRATION=24h

# Payment Adapter Configuration
# Options: 'mock' (default), 'stripe'
PAYMENT_ADAPTER=mock
STRIPE_SECRET_KEY=sk_test_YOUR_KEY_HERE (only needed if PAYMENT_ADAPTER=stripe)

# Logging
LOG_LEVEL=debug

# CORS
CORS_ORIGIN=http://localhost:3000

# API
API_PREFIX=/api
